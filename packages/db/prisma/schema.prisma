datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pokemon {
  id             Int      @id @default(autoincrement())
  name           String
  name_clean     String
  abilities      String[]
  types          String[]
  img            String?
  base_experience Int
  height         Int
  weight         Int
  is_default     Boolean
  order          Int
  hp              Int
  attack          Int
  defense         Int
  special_attack  Int
  special_defense Int
  speed           Int
}


