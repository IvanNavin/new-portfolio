generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Pokemon {
  id              Int      @id @default(autoincrement())
  name            String
  name_clean      String
  abilities       String[]
  types           String[]
  img             String?
  base_experience Int
  height          Int
  weight          Int
  is_default      Boolean
  order           Int
  hp              Int
  attack          Int
  defense         Int
  special_attack  Int
  special_defense Int
  speed           Int

  @@map("pokedex_pokemon")
}

model User {
  id     String   @id @default(cuid())
  email  String   @unique
  name   String?
  cards  Card[]
  Player Player[]

  @@map("language_user")
}

model Card {
  id          String   @id @default(cuid())
  word        String
  translation String
  remembered  Boolean  @default(false)
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@map("language_card")
}

model GameSession {
  id        String   @id @default(cuid())
  name      String
  players   Player[]
  createdAt DateTime @default(now())

  @@map("game_session")
}

model Player {
  id       String      @id @default(cuid())
  userId   String
  user     User        @relation(fields: [userId], references: [id])
  position Position?
  gameId   String
  game     GameSession @relation(fields: [gameId], references: [id])
  isReady  Boolean     @default(false)

  @@map("game_player")
}

model Position {
  id       String @id @default(cuid())
  x        Int
  y        Int
  playerId String @unique
  player   Player @relation(fields: [playerId], references: [id])

  @@map("game_position")
}
