generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Pokemon {
  id              Int      @id @default(autoincrement())
  name            String
  name_clean      String
  abilities       String[]
  types           String[]
  img             String?
  base_experience Int
  height          Int
  weight          Int
  is_default      Boolean
  order           Int
  hp              Int
  attack          Int
  defense         Int
  special_attack  Int
  special_defense Int
  speed           Int

  @@map("pokedex_pokemon")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  cards Card[]

  @@map("language_user")
}

model Card {
  id          String   @id @default(cuid())
  word        String
  translation String
  remembered  Boolean  @default(false)
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@map("language_card")
}
