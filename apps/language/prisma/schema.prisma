generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  cards Card[]

  @@map("language_user")
}

model Card {
  id          String  @id @default(cuid())
  word        String
  translation String
  remembered  Boolean @default(false)
  user        User    @relation(fields: [userId], references: [id])
  userId      String

  @@map("language_card")
}
